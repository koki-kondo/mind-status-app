# Production Environment Variables for Render.com
# Copy this file and configure for your production environment

# Django Settings
DJANGO_SECRET_KEY=<generate-using-django-core-management-utils-get-random-secret-key>
DJANGO_SETTINGS_MODULE=config.settings.production
DEBUG=False
ALLOWED_HOSTS=mind-status-backend.onrender.com

# Database (Render.com provides this automatically via render.yaml)
DATABASE_URL=postgresql://mindstatus:xxxxx@xxxxx.oregon-postgres.render.com/mindstatus

# Email Settings (Gmail SMTP - REQUIRED for invitation emails)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=mindstatusapp@gmail.com
EMAIL_HOST_PASSWORD=<your-16-digit-gmail-app-password>
DEFAULT_FROM_EMAIL=Mind Status <mindstatusapp@gmail.com>

# Frontend URL (Update after Vercel deployment)
FRONTEND_URL=https://mind-status-frontend.vercel.app

# CORS Settings (Update after Vercel deployment)
CORS_ALLOWED_ORIGINS=https://mind-status-frontend.vercel.app

# JWT Settings
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=7
